    "arn:aws:s3:::&lt;some-aws-blobstore-bucket&gt;",
    "arn:aws:s3:::&lt;some-aws-blobstore-bucket&gt;/\*",
    "arn:aws:s3:::&lt;some-aws-droplet-bucket&gt;",
