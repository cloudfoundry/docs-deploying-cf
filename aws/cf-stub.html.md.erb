    "arn:aws:s3:::&lt;some-aws-package-bucket&gt;",
    "arn:aws:s3:::&lt;some-aws-package-bucket&gt;/\*",
    "arn:aws:s3:::&lt;some-aws-resource-bucket&gt;",
    "arn:aws:s3:::&lt;some-aws-resource-bucket&gt;/\*",
